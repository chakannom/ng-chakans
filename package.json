{
  "name": "ng-chakans",
  "version": "0.0.3",
  "description": "A ChaKanS util library for Angular",
  "repository": {
    "type": "git",
    "url": "https://github.com/chakannom/ng-chakans.git"
  },
  "keywords": [
    "chakans",
    "angular",
    "angular2"
  ],
  "author": "Seon Yu",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/chakannom/ng-chakans/issues"
  },
  "homepage": "https://github.com/chakannom/ng-chakans#readme",
  "peerDependencies": {
    "@angular/core": "^8.0.0",
    "@angular/router": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@ng-bootstrap/ng-bootstrap": "^4.1.3",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@fortawesome/angular-fontawesome": "^0.4.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.18",
    "@fortawesome/free-solid-svg-icons": "^5.8.2",
    "rxjs": "^6.5.2"
  },
  "devDependencies": {
    "@angular/animations": "8.0.0",
    "@angular/common": "8.0.0",
    "@angular/compiler": "8.0.0",
    "@angular/compiler-cli": "8.0.0",
    "@angular/core": "10.2.5",
    "@angular/forms": "8.0.0",
    "@angular/platform-browser": "8.0.0",
    "@angular/platform-browser-dynamic": "8.0.0",
    "@angular/platform-server": "8.0.0",
    "@angular/router": "8.0.0",
    "@fortawesome/angular-fontawesome": "0.4.0",
    "@fortawesome/fontawesome-svg-core": "1.2.18",
    "@fortawesome/free-solid-svg-icons": "5.8.2",
    "@ng-bootstrap/ng-bootstrap": "4.2.0",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jest": "24.0.13",
    "@types/node": "10.12.18",
    "bundle-scss": "^1.4.4",
    "codelyzer": "5.0.1",
    "core-js": "3.1.3",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "jest-preset-angular": "7.1.1",
    "lint-staged": "8.1.7",
    "ng-packagr": "5.2.0",
    "prettier": "1.17.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.5.2",
    "tsickle": "0.35.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5",
    "zone.js": "0.9.1"
  },
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "ngPackage": {
    "lib": {
      "entryFile": "src/main/public_api.ts"
    }
  },
  "lint-staged": {
    "{,src/**/}*.{md,json,ts,css,scss,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "cleanup": "rimraf dist/*",
    "format": "prettier --write \"{,src/**/}*.{md,json,ts,css,scss,yml}\"",
    "lint": "tslint --project tsconfig.json -e 'node_modules/**'",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && jest --config src/test/jest.conf.js",
    "test:watch": "npm run test -- --watch",
    "themes": "bundle-scss -m \"./src/main/**/*.scss\" -d \"./dist/scss/ng-chakans.scss\"",
    "build": "npm run cleanup && ng-packagr -p package.json && npm run themes",
    "release": "git push && git push --tags && npm publish dist/"
  }
}
